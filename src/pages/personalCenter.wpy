<script>
  import wepy from 'wepy'
  import { service } from '../config.js'
  import http from '../mixins/http'
  import base from '../mixins/base'
  import TitleBar from '../components/TitleBar'
  import TransmissionGate from '../components/TransmissionGate'
  export default class PersonalCenter extends wepy.page {
    mixins = [http, base]
    config = {
      // navigationBarTitleText: '我的'
    }
    data = {
      titleText: '我的',
      userInfo: {},
      isBackBtn: true,
      transmissionType: 'home',
      phoneNumberAuthentication: false
    }
    components = {
      TitleBar,
      TransmissionGate
    }
    methods = {}
    onLoad() {}
    onShow() {
      let that = this
      this.$get({url: service.prizesMine}, {
        success: ({statusCode, data}) => {
          that.userInfo = data
          if (data.mobile !== null) {
            that.phoneNumberAuthentication = true
          }
        }
      })
    }
    address () {
      wepy.chooseAddress({
        success: function (res) {}
      })
    }
    formSubmit (event) {
      let formId = event.detail.formId
      if (formId !== 'the formId is a mock one' && !this.isUndefined(formId) && formId !== '' && formId !== null) {
        this.$updataFormId(formId)
      }
    }
    getphonenumber(event) {
      let that = this
      if (event.detail.errMsg === 'getPhoneNumber:ok') {
        this.$post({
          url: service.updateMobile,
          headers: {
            'X-JINKU-WECHAT-FORM-ID': that.formId
          },
          data: {
            encryptedData: event.detail.encryptedData,
            iv: event.detail.iv
          }
        }, {
          success: ({statusCode, data}) => {
            if (statusCode === 200) {
              this.phoneNumberAuthentication = true
            }
          }
        })
        console.log(event)
      }
    }
    toFLBRecord() {
      this.$goto('FLBRecord')
    }
  }
</script>
